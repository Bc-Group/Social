<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginTop="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_post_card"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/send_message_datetime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/sender_post_iv"
                android:src="@drawable/image_icon"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:id="@+id/sender_reel_iv"
                android:src="@drawable/image_icon"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                app:circularflow_radiusInDP="30"
                android:id="@+id/sender_post_profile"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sender_post_author"
                android:textColor="@color/white"
                android:shadowRadius="50"
                android:paddingStart="9dp"
                android:textSize="16sp"
                android:fontFamily="@font/tajawal_medium"
                android:text="Author"
                app:layout_constraintStart_toEndOf="@id/sender_post_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sender_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sender"
        android:autoLink="web"
        android:textSize="15sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/send_message_datetime"
        android:background="@drawable/sent_message_background"
        app:layout_constraintWidth_percent="0.8"/>
    <TextView
        android:id="@+id/send_message_datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="3dp"
        android:text="12:57 pm"
        android:textSize="10sp"
        android:fontFamily="@font/tajawal_medium"
        android:layout_marginEnd="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>